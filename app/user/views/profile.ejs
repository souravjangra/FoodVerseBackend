<%- include('../../../views/template/head', {pageName: pageName}) -%>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../../views/template/sidebar') -%>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <%- include('../../../views/template/navbar', {username: username}) -%>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800">
                    <%= pageName %>
                </h1>

                <div class="d-flex row justify-content-between mx-1">

                    <!--                Profile Information-->
                    <div class="card shadow mb-4 col-md-5-5 col-sm-12 px-0">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Profile Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-6 form-group">
                                    <label style="margin-left: 35px; font-size: 14px;" for="firstname">First
                                        Name</label><br>
                                    <div class="d-flex">
                                        <i class="fa fa-user" aria-hidden="true" style="align-self: center"></i>
                                        <input id="firstname" disabled type="text" placeholder="First Name"
                                               class="ml-3 w-100 form-control"
                                               value="<%= data.firstname %>"/>
                                    </div>
                                </div>

                                <div class="col-sm-12 col-md-6 form-group">
                                    <label style="margin-left: 35px; font-size: 14px;" for="lastname">Last
                                        Name</label><br>
                                    <div class="d-flex">
                                        <i class="fa fa-user" aria-hidden="true" style="align-self: center"></i>
                                        <input id="lastname" disabled type="text" placeholder="Last Name"
                                               class="ml-3 w-100 form-control"
                                               value="<%= data.lastname %>"/>
                                    </div>
                                </div>
                            </div>

                            <!--                            Email-->
                            <div class="col-sm-12 col-md-12 px-0 form-group">
                                <label style="margin-left: 35px; font-size: 14px;" for="email">Email</label><br>
                                <div class="d-flex">
                                    <i class="fa fa-envelope" aria-hidden="true" style="align-self: center"></i>
                                    <input id="email" disabled type="text" placeholder="Email"
                                           class="ml-3 w-100 form-control"
                                           value="<%= data.email %>"/>
                                </div>
                            </div>

                            <!--                            Role-->
                            <div class="col-sm-12 col-md-12 px-0 form-group">
                                <label style="margin-left: 35px; font-size: 14px;" for="role">Role</label><br>
                                <div class="d-flex">
                                    <i class="fa fa-cog" aria-hidden="true" style="align-self: center"></i>
                                    <input id="role" disabled type="text" placeholder="Role"
                                           class="ml-3 w-100 form-control"
                                           value="<%= data.role %>"/>
                                </div>
                            </div>

                            <button href="#" class="btn btn-primary btn-icon-split" style="float:right;">
                                <span class="icon text-white-50">
                                  <i class="fas fa-edit"></i>
                                </span>
                                <span class="text">Edit Profile</span>
                            </button>
                        </div>
                    </div>

                    <!--                Change Password-->
                    <div class="card shadow mb-4 col-md-5-5 col-sm-12 px-0">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Change Password</h6>
                        </div>
                        <div class="card-body">
                            <div class="col-sm-12 col-md-12 form-group">
                                <label style="margin-left: 35px; font-size: 14px;" for="new_password">New
                                    Password</label><br>
                                <div class="d-flex">
                                    <i class="fa fa-lock" aria-hidden="true" style="align-self: center"></i>
                                    <input disabled id="new_password" name="new_password" type="text"
                                           placeholder="New Password"
                                           class="ml-3 w-100 form-control"/>
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-12 form-group">
                                <label style="margin-left: 35px; font-size: 14px;" for="new_password_confirm">Confirm
                                    New Password</label><br>
                                <div class="d-flex">
                                    <i class="fa fa-lock" aria-hidden="true" style="align-self: center"></i>
                                    <input disabled id="new_password_confirm" name="new_password_confirm" type="text"
                                           placeholder="Confirm New Password"
                                           class="ml-3 w-100 form-control"/>
                                </div>
                            </div>

                            <button href="#" class="btn btn-primary btn-icon-split" style="float:right;">
                                <span class="icon text-white-50">
                                  <i class="fas fa-edit"></i>
                                </span>
                                <span class="text">Change Password</span>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../../../views/template/footer') -%>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="login.html">Logout</a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript-->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="js/sb-admin-2.min.js"></script>

</body>

</html>
